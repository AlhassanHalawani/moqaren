@model moqaren.Controllers.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="form-section">
    <h1>Login to Your Account</h1>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(true)
        </div>
    }

    <form class="login-form" asp-controller="Home" asp-action="Login" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Email">Email Address:</label>
            <input asp-for="Email" class="form-control" type="email" required>
            <span asp-validation-for="Email" class="error-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" class="form-control" type="password" required>
            <span asp-validation-for="Password" class="error-message"></span>
        </div>

        <div class="form-group">
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox">
                <label asp-for="RememberMe" class="form-check-label">Remember me</label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>

        <div class="form-links mt-3 text-center">
            <a href="@Url.Action("ForgotPassword", "Home")">Forgot Password?</a>
            <p class="mt-2">Don't have an account? <a href="@Url.Action("Register", "Home")">Sign Up</a></p>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}