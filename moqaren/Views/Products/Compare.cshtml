@model moqaren.Models.Product

<div class="container">
    <div class="product-comparison">
        <div class="product-info">
            <img src="@Model.ImageURL" alt="@Model.Name" class="product-image">
            <h1>@Model.Name</h1>
            <p>@Model.Description</p>
        </div>

        <div class="price-comparison">
            <h2>Current Prices</h2>
            @foreach (var price in Model.ProductPrices)
            {
                <div class="retailer-price">
                    <img src="@price.Retailer.Logo" alt="@price.Retailer.Name">
                    <span class="price">SAR @price.Price.ToString("N2")</span>
                    <a href="@price.URL" class="btn btn-primary">Buy Now</a>
                </div>
            }
        </div>
    </div>
</div>