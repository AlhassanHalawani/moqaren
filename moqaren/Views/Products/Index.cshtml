@model IEnumerable<moqaren.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <h1>Products</h1>

    <div class="row">
        <div class="col-md-3">
            <!-- Filters -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Filters</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" id="category">
                            <option value="">All Categories</option>
                            @foreach (var category in ViewBag.Categories ?? new List<Category>())
                            {
                                <option value="@category.CategoryID">@category.Name</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <!-- Products Grid -->
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var product in Model)
                {
                    <div class="col">
                        <div class="card h-100">
                            @if (!string.IsNullOrEmpty(product.ImageURL))
                            {
                                <img src="@product.ImageURL" class="card-img-top" alt="@product.Name">
                            }
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">@product.Description</p>
                                @if (product.ProductPrices?.Any() == true)
                                {
                                    var lowestPrice = product.ProductPrices.Min(pp => pp.Price);
                                    var highestPrice = product.ProductPrices.Max(pp => pp.Price);
                                    <p class="card-text">
                                        <small class="text-muted">Price Range:</small><br />
                                        <strong>SAR @lowestPrice.ToString("N2") - @highestPrice.ToString("N2")</strong>
                                    </p>
                                }
                            </div>
                            <div class="card-footer">
                                <a href="@Url.Action("Compare", new { id = product.ProductID })"
                                   class="btn btn-primary w-100">Compare Prices</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>